    <script src="https://cdn.socket.io/4.7.4/socket.io.min.js"></script>
    <script>
        // ============ é…ç½® ============
        const SERVER_URL = window.location.origin;
        let socket = null;
        let mediaRecorder = null;
        let audioChunks = [];
        let isRecording = false;
        let stream = null;
        let volumeInterval = null;
        
        // ============ DOM ============
        const micBtn = document.getElementById('micBtn');
        const micHint = document.getElementById('micHint');
        const pcStatus = document.getElementById('pcStatus');
        const pcText = document.getElementById('pcText');
        const volumeLevel = document.getElementById('volumeLevel');
        const debug = document.getElementById('debug');
        
        // ============ Socket.IO ============
        function connect() {
            socket = io(SERVER_URL);
            
            socket.on('connect', () => {
                console.log('ğŸ”Œ å·²è¿æ¥åˆ°æœåŠ¡å™¨');
                socket.emit('register_mobile');
                updateDebug('å·²è¿æ¥æœåŠ¡å™¨');
            });
            
            socket.on('disconnect', () => {
                console.log('ğŸ”Œ æ–­å¼€è¿æ¥');
                pcStatus.className = 'status-dot disconnected';
                pcText.textContent = 'æœåŠ¡å™¨æ–­å¼€';
                micBtn.disabled = true;
                micHint.textContent = 'è¿æ¥å·²æ–­å¼€';
                updateDebug('æ–­å¼€è¿æ¥');
            });
            
            socket.on('status_update', (data) => {
                console.log('ğŸ“¡ çŠ¶æ€æ›´æ–°:', data);
                if (data.pc_connected) {
                    pcStatus.className = 'status-dot connected';
                    pcText.textContent = 'âœ“ ç”µè„‘å·²è¿æ¥';
                    micBtn.disabled = false;
                    micHint.textContent = 'ç‚¹å‡»ğŸ¤å¼€å§‹å½•éŸ³';
                } else {
                    pcStatus.className = 'status-dot disconnected';
                    pcText.textContent = 'ç­‰å¾…ç”µè„‘è¿æ¥...';
                    micBtn.disabled = true;
                    micHint.textContent = 'éœ€è¦å…ˆè¿æ¥ç”µè„‘';
                }
            });
            
            socket.on('device_disconnected', (data) => {
                console.log('ğŸ”Œ å¯¹æ–¹æ–­å¼€:', data);
                pcStatus.className = 'status-dot disconnected';
                pcText.textContent = 'ç”µè„‘å·²æ–­å¼€';
                micBtn.disabled = true;
                micHint.textContent = 'éœ€è¦å…ˆè¿æ¥ç”µè„‘';
                if (isRecording) stopRecording();
            });
        }
        
        // ============ å½•éŸ³ ============
        async function startRecording() {
            try {
                // è·å–éº¦å…‹é£æƒé™
                stream = await navigator.mediaDevices.getUserMedia({ 
                    audio: {
                        echoCancellation: true,
                        noiseSuppression: true,
                        autoGainControl: true
                    } 
                });
                
                // åˆ›å»ºå½•éŸ³å™¨
                mediaRecorder = new MediaRecorder(stream, {
                    mimeType: 'audio/webm;codecs=opus'
                });
                
                audioChunks = [];
                
                mediaRecorder.ondataavailable = (event) => {
                    if (event.data.size > 0) {
                        sendAudioChunk(event.data);
                    }
                };
                
                mediaRecorder.start(100); // æ¯100mså‘é€ä¸€æ¬¡
                
                isRecording = true;
                micBtn.classList.add('recording');
                micBtn.innerHTML = 'ğŸ”´';
                micHint.textContent = 'æ­£åœ¨å½•éŸ³...ç‚¹å‡»åœæ­¢';
                
                // éŸ³é‡ç›‘æµ‹
                const audioContext = new AudioContext();
                const source = audioContext.createMediaStreamSource(stream);
                const analyser = audioContext.createAnalyser();
                analyser.fftSize = 256;
                source.connect(analyser);
                
                const dataArray = new Uint8Array(analyser.frequencyBinCount);
                
                volumeInterval = setInterval(() => {
                    analyser.getByteFrequencyData(dataArray);
                    let sum = 0;
                    for (let i = 0; i < dataArray.length; i++) {
                        sum += dataArray[i];
                    }
                    const avg = sum / dataArray.length;
                    volumeLevel.style.width = Math.min(100, avg * 2) + '%';
                }, 100);
                
                updateDebug('å¼€å§‹å½•éŸ³');
                
            } catch (err) {
                console.error('âŒ å½•éŸ³å¤±è´¥:', err);
                alert('æ— æ³•è®¿é—®éº¦å…‹é£ï¼Œè¯·æ£€æŸ¥æƒé™ï¼\n' + err.message);
            }
        }
        
        function stopRecording() {
            if (mediaRecorder && isRecording) {
                mediaRecorder.stop();
                stream.getTracks().forEach(track => track.stop());
                mediaRecorder = null;
                stream = null;
            }
            
            isRecording = false;
            micBtn.classList.remove('recording');
            micBtn.innerHTML = 'ğŸ¤';
            micHint.textContent = 'ç‚¹å‡»ğŸ¤é‡æ–°å½•éŸ³';
            
            if (volumeInterval) {
                clearInterval(volumeInterval);
                volumeInterval = null;
            }
            
            volumeLevel.style.width = '0%';
            updateDebug('åœæ­¢å½•éŸ³');
        }
        
        function sendAudioChunk(audioBlob) {
            if (!socket || !socket.connected) return;
            
            const reader = new FileReader();
            reader.onload = () => {
                const base64Audio = reader.result.split(',')[1];
                socket.emit('audio_chunk', {
                    audio: base64Audio,
                    timestamp: Date.now()
                });
            };
            reader.readAsDataURL(audioBlob);
        }
        
        // ============ æŒ‰é’®äº‹ä»¶ ============
        micBtn.addEventListener('click', () => {
            if (isRecording) {
                stopRecording();
            } else {
                startRecording();
            }
        });
        
        // ============ å·¥å…· ============
        function updateDebug(msg) {
            const time = new Date().toLocaleTimeString();
            debug.textContent = `[${time}] ${msg}`;
        }
        
        // ============ å¯åŠ¨ ============
        connect();
        updateDebug('åˆå§‹åŒ–ä¸­...');
    </script>
